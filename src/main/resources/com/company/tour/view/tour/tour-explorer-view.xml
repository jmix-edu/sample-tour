<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view" xmlns:maps="http://jmix.io/schema/maps/ui"
      title="msg://tourExplorerView.title">
    <data>
        <collection id="citiesDc" class="com.company.tour.entity.City">
            <loader id="citiesDl" readOnly="true">
                <query>
                    <![CDATA[select e from City e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="cityDistrictsDc" class="com.company.tour.entity.CityDistrict">
            <loader id="cityDistrictsDl" readOnly="true">
                <query>
                    <![CDATA[select e from CityDistrict e where e.city = :component_citiesComboBox]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="toursDc" class="com.company.tour.entity.Tour">
            <loader id="toursDl" readOnly="true">
                <query>
                    <![CDATA[select e from Tour e where e.city = :component_citiesComboBox]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="stopsDc" class="com.company.tour.entity.Stop">
            <loader id="stopsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Stop e inner join e.tours tr where tr.city = :component_citiesComboBox]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
        <collection id="transportsDc" class="com.company.tour.entity.Transport">
            <loader id="transportsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Transport e]]>
                </query>
            </loader>
            <fetchPlan extends="_base"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <entityComboBox id="citiesComboBox" metaClass="City" itemsContainer="citiesDc"/>
        <maps:geoMap id="map" width="100%" height="100%">
            <maps:mapView projection="EPSG:3035" zoom="13" centerX="4550367.537724382" centerY="3272633.3121306803"/>
            <maps:layers>
                <maps:tile>
                    <maps:osmSource/>
                </maps:tile>
                <maps:vector id="districtsLayer">
                    <maps:dataVectorSource id="districtsSource" dataContainer="cityDistrictsDc" property="area3035"/>
                </maps:vector>
                <maps:vector id="toursLayer">
                    <maps:dataVectorSource id="toursSource" dataContainer="toursDc" property="route3035"/>
                </maps:vector>
                <maps:vector id="stopsLayer">
                    <maps:dataVectorSource id="stopsSource" dataContainer="stopsDc" property="location3035"/>
                </maps:vector>
                <maps:vector id="transportsLayer">
                    <maps:dataVectorSource id="transportsSource" dataContainer="transportsDc" property="location3035"/>
                </maps:vector>
            </maps:layers>
        </maps:geoMap>
    </layout>
</view>