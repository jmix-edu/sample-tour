<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="tour">
        <addColumn tableName="CITY_DISTRICT">
            <column name="AREA" type="varchar(4000 BYTE)"/>
        </addColumn>

        <addNotNullConstraint columnName="AREA" tableName="CITY_DISTRICT"/>
    </changeSet>
    <changeSet id="2" author="tour">
        <addColumn tableName="STOP">
            <column name="LOCATION" type="varchar(100 BYTE)"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="tour">
        <addColumn tableName="TOUR">
            <column name="ROUTE" type="varchar(4000 BYTE)"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="tour">
        <addColumn tableName="USER_">
            <column name="WORKSPACE_LOCATION" type="varchar(100 BYTE)"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>